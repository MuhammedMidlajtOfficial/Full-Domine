<%- include('header') -%>

<div class="login-form-box">
    <form class="login-form d-flex flex-column align-items-center" action="/login" method="POST">
      <div class="d-flex flex-column align-items-center">
        <h2 class="font-weight-bold">Login Page</h2>
        <h4 style="font-size: small;">Login for the existing user</h4>
        <% if(locals.wrongCredential){ %>
          <div class="alert alert-danger">Invalid Email or Password</div>
        <% } %>
        <% if(locals.LogOut){ %>
          <div class="alert alert-success">Logout Successfull...</div>
        <% } %>
        <% if(locals.addNewUser){ %>
          <div class="alert alert-info">New user added!!!</div>
        <% } %>
      </div>
      <div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Save password</label>
        </div>
        <div class="login-form-bottom d-flex flex-column align-items-center">
          <button type="submit" class="btn btn-primary submit-button mb-3">Submit</button>
          <div class="mb-3 have-an-account">
            <a href="/DontHaveAnAccount">Don't have an account</a>
          </div>
        </div>
      </div>
    </form>
</div>

<%- include('footer') -%>